@model Question
@{
    ViewData["Title"] = "Quiz";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var test = Model.correct_choice;
}

<h1>Quiz</h1>

<div class="text-center">
    <h1>
        @Html.Raw(Model.question)
    </h1>
</div>
<div class="text-center">
    <table class="table" align="center" border="0">
        <tbody>
            @foreach (var c in Model.choices)
            {
                <tr class="text-center" border="0">
                    <td class="text-center">@Html.Raw(c) <input class="text-center" type="checkbox" name="checked" value="@c" /></td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('input[type="checkbox"]').click(function () {
            //let questionID = "@Model.id";
            var checkboxChecked = $(this).attr("value");
            if ($(this).prop("checked") == true) {
                alert(checkboxChecked);
                $(this).prop("checked", false);
                $(this).prop("disabled", true);
            }
            else if ($(this).prop("checked") == false) {
                alert("Checkbox is unchecked.");
            }
        });
    });
</script>